<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>
<p>Task completed?</p>
<% if @task.completed? %>
 <p><%= "[X]" %></p>
<% else %>
 <p><%= "[ ]" %></p>
<% end %>
<%= link_to "Delete", task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>



<%= link_to "Update", edit_task_path(@task) %>

<%= link_to "Back to List", tasks_path %>


