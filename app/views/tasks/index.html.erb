<h1>My Tasks</h1>

<% @tasks.each do |task| %>
  <h2><%= link_to task.title, task_path(task) %></h2>
  <!-- <p><%= task.details %></p> -->
  <% if task.completed? %>
   <p><%= "[X]" %></p>
  <% else %>
   <p><%= "[ ]" %></p>
  <% end %>
  <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>

<%= link_to "Add a new task", tasks_new_path %>

